{
	"name": "genetic_algorithm",
	"authors": [
		"Aleš Lerch",
		"Martin Hnátek"
	],
    "lflags" : ["-LDSFMLC/lib"],
	"dependencies": {
        "dsfml:graphics": "~>2.1",
		"dlib": "~>0.11.1"
	},
	"configurations": [
		{
			"name": "genetic",
			"targetType": "executable",
			"excludedSourceFiles": ["source/benchmark.d"],
			"targetName": "genetic"
		},
		{
			"name": "benchmark",
			"targetType": "executable",
			"excludedSourceFiles": ["source/app.d"],
			"targetName": "benchmark",
			"dependencies": {
				"ggplotd": ">=0.4.5"
			},
			"subConfigurations": {
				"ggplotd": "ggplotd-gtk"
			},
			"buildRequirements": ["disallowOptimization"]
		}
